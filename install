brew cask install notational-velocity

# install xcode
brew install macvim --override-system-vim
brew linkapps

# CLI
brew install node
# npm installs with node now!
brew install tig
brew install ack
brew install tmux
brew install gpg
# for node repl
brew install rlwrap
gem install bropages
brew install cgdb



# links
ln -s ~/.files/.bashrc ~/.bashrc
ln -s ~/.files/.bash_profile ~/.bash_profile
ln -s ~/.files/.bash_aliases ~/.bash_aliases
ln -s ~/.files/.tmux.conf ~/.tmux.conf
ln -s ~/.files/.vimrc ~/.vimrc
ln -s ~/.files/.gitignore_global ~/.gitignore_global
ln -s ~/.files/.jshintrc ~/.jshintrc
ln -s ~/.files/.coffeelint.json ~/.coffeelint.json

git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
vim +BundleInstall +qall

# configs
git config --global color.ui true
git config --global user.name "David"
git config --global user.email "xudavidb@gmail.com"
git config --global core.excludesfile ~/.gitignore_global

mkdir ~/Pictures/Screenshots
defaults write com.apple.screencapture location ~/Pictures/Screenshots
killall SystemUIServer


# 2d dock
defaults write com.apple.dock no-glass -boolean YES

# show only active apps
defaults write com.apple.dock static-only -bool TRUE

# suck animation
defaults write com.apple.dock mineffect suck

# left side dock
defaults write com.apple.dock pinning -string start

# dim hidden items
defaults write com.apple.dock showhidden -bool true

# cdock
brew cask install cdock

# markdown stuff
sudo gem install pygments.rb
sudo gem install redcarpet
sudo npm install -g instant-markdown-d


# npm
npm install -g coffee-script
npm install -g express
npm install -g bower
npm install -g grunt
npm install -g coffeelint
npm install -g jshint
npm install -g json



# vim
cd ~/.vim/bundle/YouCompleteMe
./install.sh --clang-completer


# GO - MUST UPDATE VERSION AND LOCATION:
brew install hg
brew install go
GOPATH=/usr/local/Cellar/go/1.3/bin/
 export GOPATH




git clone git://github.com/facebook/libphutil.git ~/tools/
git clone git://github.com/facebook/arcanist.git ~/tools/


if [ -e /home/vagrant/.gvm/scripts/gvm ]; then
    echo "GVM already installed. Skipping."
else
    bash < <(curl -s -S -L https://raw.githubusercontent.com/moovweb/gvm/master/binscripts/gvm-installer)
    source ~/.gvm/scripts/gvm
    gvm install go1.2.2
fi

